# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                            controllers.MedicationListController.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                controllers.Assets.at(path="/public", file)

# Admin
GET         /admin                                       controllers.RulesController.list

GET         /drugs                                       controllers.DrugsController.list

# Rules
GET         /admin/rules                                 controllers.RulesController.list
GET         /admin/rules/new                             controllers.RulesController.create
POST        /admin/rules                                 controllers.RulesController.save
GET         /admin/rules/:id/edit                        controllers.RulesController.edit(id: Long)
POST        /admin/rules/:id                             controllers.RulesController.update(id: Long)
GET         /admin/rules/:id/delete                      controllers.RulesController.remove(id: Long)
POST        /admin/rules/:id/delete                      controllers.RulesController.delete(id: Long)

# Drug groups
GET         /admin/drug_groups                           controllers.DrugGroupsController.list
GET         /admin/drug_groups/new                       controllers.DrugGroupsController.create
POST        /admin/drug_groups                           controllers.DrugGroupsController.save
GET         /admin/drug_groups/:id/edit                  controllers.DrugGroupsController.edit(id: Long)
POST        /admin/drug_groups/:id                       controllers.DrugGroupsController.update(id: Long)
GET         /admin/drug_groups/:id/delete                controllers.DrugGroupsController.remove(id: Long)
POST        /admin/drug_groups/:id/delete                controllers.DrugGroupsController.delete(id: Long)

# Drug types
GET         /admin/drug_types                            controllers.DrugTypesController.list
GET         /admin/drug_types/new                        controllers.DrugTypesController.create
POST        /admin/drug_types                            controllers.DrugTypesController.save
GET         /admin/drug_types/:id/edit                   controllers.DrugTypesController.edit(id: Long)
POST        /admin/drug_types/:id                        controllers.DrugTypesController.update(id: Long)
GET         /admin/drug_types/:id/delete                 controllers.DrugTypesController.remove(id: Long)
POST        /admin/drug_types/:id/delete                 controllers.DrugTypesController.delete(id: Long)

# Drug type terms
GET         /admin/drug_type_terms                       controllers.DrugTypeTermsController.list
GET         /admin/drug_type_terms/new                   controllers.DrugTypeTermsController.create
POST        /admin/drug_type_terms                       controllers.DrugTypeTermsController.save
GET         /admin/drug_type_terms/:label/edit           controllers.DrugTypeTermsController.edit(label: String)
POST        /admin/drug_type_terms/:label                controllers.DrugTypeTermsController.update(label: String)
GET         /admin/drug_type_terms/:label/delete         controllers.DrugTypeTermsController.remove(label: String)
POST        /admin/drug_type_terms/:label/delete         controllers.DrugTypeTermsController.delete(label: String)

# Drug group terms
GET         /admin/drug_group_terms                      controllers.DrugGroupTermsController.list
GET         /admin/drug_group_terms/new                  controllers.DrugGroupTermsController.create
POST        /admin/drug_group_terms                      controllers.DrugGroupTermsController.save
GET         /admin/drug_group_terms/:label/edit          controllers.DrugGroupTermsController.edit(label: String)
POST        /admin/drug_group_terms/:label               controllers.DrugGroupTermsController.update(label: String)
GET         /admin/drug_group_terms/:label/delete        controllers.DrugGroupTermsController.remove(label: String)
POST        /admin/drug_group_terms/:label/delete        controllers.DrugGroupTermsController.delete(label: String)

# Question terms
GET         /admin/question_terms                        controllers.QuestionTermsController.list
GET         /admin/question_terms/new                    controllers.QuestionTermsController.create
POST        /admin/question_terms                        controllers.QuestionTermsController.save
GET         /admin/question_terms/:label/edit            controllers.QuestionTermsController.edit(label: String)
POST        /admin/question_terms/:label                 controllers.QuestionTermsController.update(label: String)
GET         /admin/question_terms/:label/delete          controllers.QuestionTermsController.remove(label: String)
POST        /admin/question_terms/:label/delete          controllers.QuestionTermsController.delete(label: String)