GET           /admin/medication_products/new                                                   controllers.MedicationProductsController.create
POST          /admin/medication_products                                                       controllers.MedicationProductsController.save
GET           /admin/medication_products/:id/edit                                              controllers.MedicationProductsController.edit(id: models.MedicationProductID)
POST          /admin/medication_products/:id                                                   controllers.MedicationProductsController.update(id: models.MedicationProductID)
GET           /admin/medication_products/:id/delete                                            controllers.MedicationProductsController.remove(id: models.MedicationProductID)
POST          /admin/medication_products/:id/delete                                            controllers.MedicationProductsController.delete(id: models.MedicationProductID)

# Medication product generic types
