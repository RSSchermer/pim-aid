# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                                                                controllers.StaticPagesController.introduction

GET           /privacy                                                                         controllers.StaticPagesController.privacy

GET           /about                                                                           controllers.StaticPagesController.about

GET           /contact                                                                         controllers.StaticPagesController.contact

GET           /general_information                                                             controllers.StepsController.generalInformation
POST          /general_information                                                             controllers.StepsController.saveGeneralInformation
GET           /medication_list                                                                 controllers.StepsController.medicationList
GET           /base_statement_selection                                                        controllers.StepsController.independentStatementSelection
POST          /base_statement_selection                                                        controllers.StepsController.saveIndependentStatementSelection
GET           /extra_statement_selection                                                       controllers.StepsController.conditionalStatementSelection
POST          /extra_statement_selection                                                       controllers.StepsController.saveConditionalStatementSelection
GET           /suggestion_list                                                                 controllers.StepsController.suggestionList
GET           /print                                                                           controllers.StepsController.print

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                                                    controllers.Assets.at(path="/public", file)

# Drugs
GET           /drugs                                                                           controllers.DrugsController.list
POST          /drugs                                                                           controllers.DrugsController.save
DELETE        /drugs/:id                                                                       controllers.DrugsController.delete(id: Long)

# Admin
GET           /admin                                                                           controllers.RulesController.list

# Rules
GET           /admin/rules                                                                     controllers.RulesController.list
GET           /admin/rules/new                                                                 controllers.RulesController.create
POST          /admin/rules                                                                     controllers.RulesController.save
GET           /admin/rules/:id/edit                                                            controllers.RulesController.edit(id: Long)
POST          /admin/rules/:id                                                                 controllers.RulesController.update(id: Long)
GET           /admin/rules/:id/delete                                                          controllers.RulesController.remove(id: Long)
POST          /admin/rules/:id/delete                                                          controllers.RulesController.delete(id: Long)

# Rule suggestion templates
GET           /admin/rules/:ruleId/suggestions                                                 controllers.RuleSuggestionTemplatesController.list(ruleId: Long)
POST          /admin/rules/:ruleId/suggestions                                                 controllers.RuleSuggestionTemplatesController.save(ruleId: Long)
GET           /admin/rules/:ruleId/suggestions/:suggestionTemplateId/delete                    controllers.RuleSuggestionTemplatesController.remove(ruleId: Long, suggestionTemplateId: Long)
POST          /admin/rules/:ruleId/suggestions/:suggestionTemplateId/delete                    controllers.RuleSuggestionTemplatesController.delete(ruleId: Long, suggestionTemplateId: Long)

# Suggestion templates
GET           /admin/suggestions                                                               controllers.SuggestionTemplatesController.list
GET           /admin/suggestions/new                                                           controllers.SuggestionTemplatesController.create
POST          /admin/suggestions                                                               controllers.SuggestionTemplatesController.save
GET           /admin/suggestions/:id/edit                                                      controllers.SuggestionTemplatesController.edit(id: Long)
POST          /admin/suggestions/:id                                                           controllers.SuggestionTemplatesController.update(id: Long)
GET           /admin/suggestions/:id/delete                                                    controllers.SuggestionTemplatesController.remove(id: Long)
POST          /admin/suggestions/:id/delete                                                    controllers.SuggestionTemplatesController.delete(id: Long)

# Drug groups
GET           /admin/drug_groups                                                               controllers.DrugGroupsController.list
GET           /admin/drug_groups/new                                                           controllers.DrugGroupsController.create
POST          /admin/drug_groups/importFtkGroup                                                controllers.DrugGroupsController.importFtkGroup
POST          /admin/drug_groups                                                               controllers.DrugGroupsController.save
GET           /admin/drug_groups/:id/edit                                                      controllers.DrugGroupsController.edit(id: Long)
POST          /admin/drug_groups/:id                                                           controllers.DrugGroupsController.update(id: Long)
GET           /admin/drug_groups/:id/delete                                                    controllers.DrugGroupsController.remove(id: Long)
POST          /admin/drug_groups/:id/delete                                                    controllers.DrugGroupsController.delete(id: Long)

# Drug group generic types
GET           /admin/drug_groups/:drugGroupId/generic_types                                    controllers.DrugGroupGenericTypesController.list(drugGroupId: Long)
POST          /admin/drug_groups/:drugGroupId/generic_types                                    controllers.DrugGroupGenericTypesController.save(drugGroupId: Long)
GET           /admin/drug_groups/:drugGroupId/generic_types/:genericTypeId/delete              controllers.DrugGroupGenericTypesController.remove(drugGroupId: Long, genericTypeId: Long)
POST          /admin/drug_groups/:drugGroupId/generic_types/:genericTypeId/delete              controllers.DrugGroupGenericTypesController.delete(drugGroupId: Long, genericTypeId: Long)

